{
	"compilerOptions": {
		"module": "ESNext",
        "target": "ES5",
        "moduleResolution": "node10",
		"esModuleInterop": true,
        "removeComments": true,
		"strictNullChecks": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"lib": ["esnext", "dom"],
	},
	"include": ["src"],
	"exclude": ["node_modules", "build", "dist", "**/*.md"]
}